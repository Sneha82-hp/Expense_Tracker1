{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",                         // ✅ 'CommonJS' (not 'CommonJs' — case-sensitive)
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",                   // ✅ Move this up for clarity
    "esModuleInterop": true,                      // ✅ Enables `import express from "express"`
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
